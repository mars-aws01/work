.left-panel {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  width: 220px;
  overflow-y: auto;
  background: #333;
}

.page-content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 220px;
  padding: 10px;
  overflow: hidden;
  overflow-y: auto;
}

.menu-sidebar {
  padding-left: 0;
  font-size: 12px;

  ul {
    padding-left: 0;
  }

  li {
    font-size: 0;

    &.active:not(.open)>a {
      background: #333;
    }

    &:hover:not(.open)>a, &.active:not(.open) a {
      background: rgba(0, 0, 0, 0.4);
      color: yellowgreen;
      font-weight: bold;
    }

    &.open {
      background: rgba(0, 0, 0, 0.4);

      >a {
        background: #333;
      }

      >ul {
        display: block;
      }
    }

    >ul {
      display: none;
    }
  }

  a {
    display: flex;
    font-size: 12px;
    text-decoration: none;
    color: #eee;
    font-weight: bold;
    display: flex;
    align-items: center;
    padding: 10px 0 10px 5px;

    &.level1 {
      >i {
        font-size: 14px;
        height: 17px;
        line-height: 17px;
      }
    }

    &.level2 {
      padding-left: 15px;

      >i {
        line-height: 17px;
        width: 25px;
      }
    }

    >span {
      flex: 1;
      white-space: nowrap;
      word-break: break-all;
      text-overflow: ellipsis;
      overflow: hidden;
    }

    >i, >b {
      width: 30px;
      text-align: center;
    }
  }
}
