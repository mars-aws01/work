.nk-collapse-box {
  margin-bottom: 8px;

  &.nk-collapse-box-disabled {
    color: #b8b8b8;
  }

  .collapse-box-content {
    padding-top: 4px;
    padding-bottom: 4px;
  }

  .collapse-box-header {
    font-size: 14px;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: bold;
    height: 24px;
    line-height: 24px;
    display: flex;

    .nk-collapse-box-line {
      flex: 1;
      border-bottom: 1px solid #ccc;
      border-image: linear-gradient(to right, #eee, #ccc, #eee) 30 30;
      height: 50%;
      margin: 0 5px;
    }

    .nk-collapse-icon {
      width: 10px;
      height: 14px;
      margin-top: 4.5px;
    }

    .nk-collapse-box-disabled& {
      color: #b8b8b8;
      cursor: not-allowed;

      .nk-collapse-box-line {
        border-bottom-color: #e1e1e1;
      }
    }

    b {
      cursor: pointer;
    }
  }
}
