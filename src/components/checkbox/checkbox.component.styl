.nk-checkbox {
  font-weight: normal;
  font-size: 12px;
  font-weight: normal;
  margin-bottom: 0;
  line-height: 1;
  padding: 5px 4px;
  cursor: pointer;

  .nk-checkbox-inner {
    display: inline-block;
    border-radius: 2px;
    border: 1px solid #ccc;
    width: 14px;
    height: 14px;
    vertical-align: text-bottom;
    position: relative;
  }

  input[type=checkbox] {
    display: none;
  }

  &:hover:not(.nk-checkbox-disabled) .nk-checkbox-inner {
    border-color: #3795db;
    box-shadow: 0 0 3px #3795db;
  }

  &.nk-checkbox-checked {
    .nk-checkbox-inner {
      background: #3795db;
      border-color: #3795db;

      &::before {
        content: '';
        position: absolute;
        transform: rotate(45deg) scale(1);
        left: 4px;
        top: 1px;
        display: table;
        width: 5px;
        height: 8px;
        border: 2px solid #fff;
        border-top: 0;
        border-left: 0;
        transition: all 0.2s cubic-bezier(0.12, 0.4, 0.29, 1.46) 0.1s;
      }
    }
  }

  &.nk-checkbox-disabled {
    cursor: not-allowed;

    .nk-checkbox-inner {
      background: #f1f1f1;
      border-color: #e1e1e1;

      &::before {
        border-color: #b8b8b8;
      }
    }
  }
}
