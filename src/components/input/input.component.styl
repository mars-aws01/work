.nk-input-wrap {
  position: relative;
  display: block;

  > i {
    position: absolute;
    top: 6px;
    right: 8px;
  }

  .nk-input-error {
    display: inline-block;
    border: 1px solid red;
    background: red;
    color: #fff;
    position: absolute;
    bottom: calc(100% + 10px);
  }
}

.nk-input {
  font-size: 12px;
  font-family: Arial, Helvetica, sans-serif;
  line-height: 14px;
  padding: 4px 8px;
  border: 1px solid #ccc;
  background: #fff;
  outline: none;
  color: #000;
  width: 100%;

  &:active, &:focus {
    border-color: #3795db;
    box-shadow: 0px 0px 3px #3795db;
  }

  &.nk-input-readonly {
    color: #444;
    background: #f1f1f1;
    border-color: #e1e1e1;
    box-shadow: none;
  }

  &.nk-input-disabled {
    color: #b8b8b8;
    background: #f1f1f1;
    border-color: #e1e1e1;
    box-shadow: none;
  }

  .ng-invalid.ng-dirty & {
    border-color: #dc1d1d;
    box-shadow: none;
  }

  &.nk-input-has-icon {
    padding-right: 24px;
  }
}
