.nk-modal {
  .modal-content {
    border-radius: 4px;
    border: none;
  }

  .modal-header {
    background: #0068ae;
    padding: 8px;
    border-radius: 4px 4px 0 0;

    .modal-title {
      font-weight: bold;
      font-size: 12px;
      color: #ffffff;
      line-height: 16px;
    }

    .colse {
      font-size: 12px;
      color: #ffffff;
      line-height: 16px;
      width: 16px;
      margin-top: -16px;
      float: right;
      text-align: center;
      background: none;
      border: none;
      padding: 0;

      &:hover {
        border-radius: 4px;
        background: rgba(0, 0, 0, 0.1);
      }
    }
  }

  .modal-body {
    padding: 16px;
  }

  .modal-footer {
    border-top: none;
    padding: 0 16px 16px 16px;

    .nk-button {
      margin-bottom: 0;
    }
  }

  &.nk-modal-drag {
    &.nk-disable-backdrop {
      .modal {
        position: initial;
      }

      .modal-dialog {
        position: fixed;
        z-index: 9999
      }
    }

    .modal-dialog {
      // position: absolute;      
      margin: 0;
    }

    .modal-header {
      cursor: move;
    }
  }
}

.modal {
  text-align: center;
  padding: 0 !important;
}

.modal:before {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  margin-right: -4px;
}

.modal-dialog {
  display: inline-block;
  text-align: left;
  vertical-align: middle;
}
