[hidden] {
  display: none !important;
}

.nk-comp {
  line-height: 1;
}

.nk-form {
  .control-label {
    font-size: 12px;
    color: #7a7a7a;
    line-height: 16px;
    font-weight: normal;
    padding-right: 4px;
  }
}

.nk-inline-form-group {
  display: flex;
  align-items: center;

  .control-label {
    font-size: 12px;
    color: #7a7a7a;
    line-height: 16px;
    font-weight: normal;
    padding-right: 4px;
  }

  nk-input {
    flex: 1;
  }
}

form.ng-submitted {
  nk-input.ng-invalid .nk-input {
    border-color: #f43f3f;
    box-shadow: 0 0 4px 0 #f43f3f;
  }
}

.text-muted {
  color: #777677;
}

.text-primary {
  color: #0077c7;
}

.text-success {
  color: #00c78d;
}

.text-info {
  color: #005a97;
}

.text-danger {
  color: #f43f3f;
}

.text-warning {
  color: #f09000;
}
