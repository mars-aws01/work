.nk-accordion {
  &.panel-group {
    nk-accordion-item:first-child .panel {
      border-top-width: 1px;
      border-radius: 4px 4px 0 0;
    }

    nk-accordion-item:last-child .panel {
      border-radius: 0 0 4px 4px;
    }

    .panel {
      border-radius: 0;
      border-top-width: 0;

      .panel-heading {
        padding: 3.5px 4px;
        cursor: pointer;
      }

      .panel-body {
        padding: 4px;
      }
    }
  }
}
