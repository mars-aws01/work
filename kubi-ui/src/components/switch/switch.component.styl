.nk-switch {
  font-weight: normal;
  font-size: 12px;
  font-weight: normal;
  margin-bottom: 0;
  line-height: 1;
  margin-bottom: 4px;
  cursor: pointer;

  .nk-switch-inner {
    display: inline-block;
    width: 40px;
    height: 20px;
    border-radius: 10px;
    background: #c0bfc0;
    vertical-align: text-bottom;
    position: relative;

    &::before {
      content: '';
      position: absolute;
      top: 2px;
      left: 2px;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      background: #fff;
    }
  }

  .nk-switch-content {
    user-select: none;
    padding: 2px 4px;
    float: right;
    display: inline-block;
    font-size: 12px;
    color: #272727;
    line-height: 16px;
  }

  input[type=checkbox] {
    display: none;
  }

  &.nk-switch-checked {
    .nk-switch-inner {
      background: #0077c7;

      &::before {
        left: auto;
        right: 2px;
        transition: all 0.3s cubic-bezier(0.12, 0.4, 0.29, 1.46) 0.1s;
      }
    }
  }

  &.nk-switch-disabled {
    cursor: not-allowed;

    &.nk-switch-checked {
      .nk-switch-inner {
        background: #d6e9f5;
      }
    }

    .nk-switch-inner {
      background: #f3f3f3;

      &::before {
        border-color: #ffffff;
      }
    }
  }
}
