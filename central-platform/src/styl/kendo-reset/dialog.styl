.k-dialog-wrapper {
  .k-dialog {
    border: none;
    border-radius: 4px;
  }

  .k-window-titlebar {
    padding: 8px;
    background: #0068ae;
    border-radius: 4px 4px 0 0;
    color: #ffffff;
    font-size: 12px;
    line-height: 16px;
    font-weight: bold;
  }

  .k-prompt-container, .k-window-content {
    padding: 16px;
  }

  .k-dialog-buttongroup .k-button {
    padding: 6px;

    &.k-primary {
      color: #0077c7;

      &:hover {
        background: #0077c7;
        color: #ffffff;
      }
    }
  }
}
