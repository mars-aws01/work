$sidebar-width = 220px;

$scrollbar {
  /* 设置滚动条的样式 */
  &::-webkit-scrollbar {
    width: 8px;
  }

  &::-webkit-scrollbar-track {
    background: transparent;
  }

  /* 滚动条滑块 */
  &::-webkit-scrollbar-thumb {
    border-radius: 6px;
    background: rgba(243, 243, 243, 0.2);
  }

  @-moz-document url-prefix() {
    @media (min-width: 1281px) {
      & {
        overflow: hidden !important;

        &:hover {
          overflow: auto !important;
        }
      }
    }
  }
}

.main-menu-panel {
  $sidebar-dimmer-index = 999999;
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  // min-width: 100vw;
  z-index: $sidebar-dimmer-index;
  overflow: hidden;

  .dimmer {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.3);
  }

  .nk-left-sidebar {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    width: $sidebar-width;
    overflow-y: auto;
    background: #002137;
    color: #ffffff;
    transition: all 0.2s ease;
    z-index: $sidebar-dimmer-index + 1;
    padding: 20px;
    @extend $scrollbar;

    >div.main-content {
      position: relative;
      min-height: calc(100vh - 52px);
      padding-bottom: 80px;

      .logo {
        margin: 12px 0 8px 0;

        &>img {
          width: 93px;
        }
      }

      .auth-info {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        font-weight: bold;
        margin-bottom: 32px;

        .user-name {
          white-space: nowrap;

          &>span {
            margin-right: 3px;
          }

          flex: 1;
          font-size: 12px;
          color: #b8d9ef;
          line-height: 16px;
        }

        .logout-btn > a {
          font-size: 12px;
          color: #ffffff;
          line-height: 16px;
        }
      }

      .search-panel {
        position: relative;
        margin-bottom: 18px;

        input.form-control {
          background: #ffffff;
          border-radius: 4px;
          width: 100%;
          height: 24px;
          padding-right: 28px;

          &:focus {
            outline: none;
          }
        }

        i.fa {
          position: absolute;
          right: 8px;
          top: 4px;
          font-size: 12px;
          color: #272727;
          line-height: 16px;
          text-align: center;

          &.fa-remove {
            cursor: pointer;
          }
        }
      }

      .most-used-panel {
        margin-top: 19px;

        p.title {
          font-weight: bold;
          font-size: 14px;
          color: #b8d9ef;
          line-height: 20px;
        }

        .items {
          >div.menu-item {
            word-break: break-all;
            margin-top: 16px;

            a {
              font-size: 12px;
              color: #ffffff;
              line-height: 16px;
            }
          }
        }
      }

      .bottom-tools-panel {
        position: absolute;
        bottom: 0;
        width: 100%;

        >div.menu-item {
          margin-top: 16px;

          a {
            font-size: 12px;
            color: #ffffff;
            line-height: 16px;
          }
        }
      }

      .sub-panel {
        position: fixed;
        top: 0;
        bottom: 0;
        left: $sidebar-width;
        width: 0;
        transition: all 0.2s ease;
        overflow-y: hidden;
        cursor: default;

        .large-menu-item {
          margin: 0;
        }

        @extend $scrollbar;
      }

      span.a-link {
        cursor: pointer;

        &:hover {
          text-decoration: underline;
        }
      }

      .langeage {
        position: relative;
      }

      .language-select-panel {
        padding: 4px 0;
        color: black;
        background: #fff;
        position: absolute;
        left: 60px;
        bottom: 8px;
        border-radius: 3px;
        overflow: hidden;

        .select-item {
          padding: 4px 12px;
          line-height: 16px;
          cursor: pointer;
          white-space: nowrap;

          &:hover {
            background-color: rgba(0, 0, 0, 0.2);
          }
        }
      }
    }
  }
}

.main-menu-panel {
  .large-menu-item {
    $menu-height = 56px;
    cursor: pointer;
    margin: 0 -20px;
    padding: 0 20px;
    height: $menu-height;
    font-weight: bold;
    font-size: 14px;
    display: flex;
    align-items: center;

    &>a.menu-name:hover {
      text-decoration: underline;
    }

    &>.menu-name {
      flex: 1;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      text-decoration: none;
      color: white;
      line-height: 20px;
    }

    &:hover, &.active {
      background: #002f4f;

      >.menu-name, >i.fa {
        color: #b8d9ef;
      }

      &>.sub-panel {
        width: $sidebar-width;
        overflow-y: auto;
      }
    }
  }

  .categories-panel {
    position: absolute;
    top: 0;
    left: $sidebar-width;
    bottom: 0;
    background: #002f4f;
    display: flex;

    .large-menu-item {
      margin: 0;
      padding: 0 20px;

      &:hover, &.active {
        background: #003e67;
      }
    }

    .level {
      height: 100%;
      overflow-y: auto;
      @extend $scrollbar;
    }

    .level-1 {
      width: 200px;
    }

    .level-2, .level-3 {
      padding-top: 16px;
      width: 180px;
      border-left: 1px solid #003e67;

      .large-menu-item {
        height: 32px;

        .menu-name {
          font-size: 12px;
          line-height: 16px;
        }
      }
    }

    .level-3 {
      width: 220px;
    }
  }

  .quick-links-panel {
    width: 220px;
    position: absolute;
    top: 0;
    left: 220px;
    bottom: 0;
    padding-top: 20px;
    background: #002f4f;
    overflow: hidden;

    >div {
      padding: 0 20px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .menu-item {
      margin-top: 16px;

      &:first-child {
        margin-top: 0;
      }
    }

    .category-name {
      font-weight: bold;
      font-size: 14px;
      color: #c2dbf4;
      line-height: 20px;
    }

    .menu-link>a {
      font-size: 12px;
      color: #ffffff;
      line-height: 16px;
    }
  }
}
