.nk-feedback-modal {
  .modal-dialog {
    width: 500px;
  }

  .modal-content {
    border-radius: 0;
  }

  .modal-header {
    padding: 15px;
    border-bottom: 1px solid #e5e5e5;

    h4 {
      font-size: 14px;
      font-weight: 600;
    }
  }

  .modal-body {
    padding: 5px;
    max-height: calc(100vh - 180px);
    overflow-y: auto;

    textarea {
      font-size: 14px;
    }

    .checkbox {
      position: relative;
      display: block;
      margin-top: 10px;
      margin-bottom: 10px;
      margin-left: 20px;

      input[type='checkbox'] {
        position: absolute;
        margin-left: -20px;
        opacity: 0;
        z-index: 1;

        &:checked+label:before {
          background-color: #5cb85c;
          border-color: #5cb85c;
        }

        &:checked+label:after {
          font-family: FontAwesome;
          content: '\F00C';
          color: #ffffff;
        }
      }

      label {
        display: inline-block;
        vertical-align: middle;
        position: relative;
        padding-left: 5px;
        min-height: 20px;
        margin-bottom: 0;
        font-weight: 400;
        cursor: pointer;

        &:after, &:before {
          display: inline-block;
          position: absolute;
          left: 0;
          margin-left: -20px;
        }

        &:before {
          content: '';
          width: 17px;
          height: 17px;
          border: 1px solid #ccc;
          border-radius: 3px;
          background-color: #fff;
          transition: border 0.15s ease-in-out, color 0.15s ease-in-out;
        }

        &:after {
          width: 16px;
          height: 16px;
          top: 0;
          left: 0;
          padding-left: 3px;
          padding-top: 1px;
          font-size: 11px;
          color: #555;
        }
      }
    }

    .screenshot {
      position: relative;
      min-height: 150px;

      .screenshoting {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 25px;
      }

      img {
        vertical-align: middle;
        border: none;
        max-width: 100%;
      }
    }

    .m-t-xs {
      margin-top: 5px;
    }
  }

  .modal-footer {
    padding: 15px;
    text-align: right;
    border-top: 1px solid #e5e5e5;

    .btn {
      display: inline-block;
      padding: 6px 12px;
      margin-bottom: 0;
      font-size: 14px;
      font-weight: 400;
      line-height: 1.42857143;
      text-align: center;
      white-space: nowrap;
      vertical-align: middle;
      touch-action: manipulation;
      cursor: pointer;
      user-select: none;
    }

    .cancel-btn {
      color: inherit;
      background: #fff;
      border: 1px solid #e7eaec;
      border-radius: 0;

      &:hover {
        background-color: #e6e6e6;
        color: inherit;
        border: 1px solid #d2d2d2;
      }
    }

    .send-btn {
      border-radius: 0;
      background-color: #1ab394;
      border-color: #1ab394;
      color: #fff;

      &:hover {
        background-color: #18a689;
        border-color: #18a689;
      }
    }
  }
}
