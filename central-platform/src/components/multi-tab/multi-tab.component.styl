.nk-multi-tab {
  margin-top: 2px;

  .nk-tab-item {
    padding: 8px;
  }

  .nk-multi-tab-item {
    iframe {
      width: 100%;
      height: 100vh;
    }
  }

  a.tab-header {
    display: flex;
    align-items: center;
    white-space: nowrap;

    >span {
      flex: 1;
      max-width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
      font-weight: 700;
    }

    i.tab-close {
      margin-left: 5px;
      cursor: pointer;

      &:hover {
        color: tomato;
      }
    }
  }
}
