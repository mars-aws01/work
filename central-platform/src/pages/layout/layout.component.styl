/* 主页面样式 */
.nk-wrap-view {
  padding: 0;
  padding-top: $top-navbar-height;
  padding-bottom: 60px;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1050;
}

/* 固定底部样式 */
.nk-bottom-navbar {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  min-height: 40px;
  background: #002137;
  opacity: 0.95;
  transition: all 0.3s ease;
  z-index: $fixed-nav-index;

  >.nav-panel {
    height: 100%;
    display: flex;
    align-items: flex-end;

    .divider {
      align-self: stretch;
      background: #003e67;
      width: 1px;
      margin: 8px 3px;
    }

    .toggle-menu-btn {
      cursor: pointer;
      padding: 8px;

      &:hover {
        i.fa {
          color: orange;
        }
      }

      i.fa {
        font-size: 18px;
        color: #ffffff;
        line-height: 24px;
      }
    }

    .function-panel {
      flex: 1;
    }

    .common-tools {
      height: 100%;

      .collspan-btn {
        font-size: 18px;
        color: #ffffff;
        line-height: 24px;
        width: 24px;
        text-align: center;
        cursor: pointer;
        margin: 8px;

        &:hover {
          background: rgba(0, 0, 0, 0.2);
        }
      }
    }
  }
}

.nk-tab-toolbar {
  z-index: $fixed-nav-index + 1;
  position: fixed;
  display: flex;
  top: 40px;
  left: 8px;
  right: 90px;
  flex-wrap: wrap;

  >.nk-tool-item {
    @extend $customer-tool-item-base;

    &:hover {
      background-color: inherit;
      text-decoration: underline;
    }
  }
}

.function-panel {
  min-height: 40px;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;

  &.hide-divider {
    .nk-function-zone:after {
      display: none;
    }
  }

  .nk-function-zone {
    display: flex;
    position: relative;
    flex-wrap: wrap;

    &:last-child:after {
      display: none;
    }

    &:after {
      position: absolute;
      left: 8px;
      right: 8px;
      bottom: 0;
      content: ' ';
      background: #003e67;
      height: 1px;
    }

    &.no-after:after {
      display: none;
      content: '';
    }
  }

  .nk-function-item {
    white-space: nowrap;
    font-size: 12px;
    color: #ffffff;
    line-height: 24px;
    margin: 8px;
    cursor: pointer;

    a {
      color: #ffffff;
    }

    &.disabled, a.disabled, &.disabled>* {
      color: #777677;
      pointer-events: none;
      text-decoration: none !important;
      cursor: not-allowed;
    }

    &:hover a.disabled {
      text-decoration: none;
    }
  }
}

body.locked-screen {
  overflow: hidden;

  .sys-lock-screen {
    height: 100%;
    overflow: auto;
  }
}

.sys-lock-screen {
  z-index: 1000000;
  background-color: #f3f3f3;
  position: fixed;
  top: 0;
  left: 0;
  height: 0;
  width: 100%;
  overflow: hidden;
  transition: all 0.5s ease;

  .lock-word {
    position: absolute;
    top: 110px;
    left: 50%;
    margin-left: -501px;

    .first-word {
      margin-right: 160px;
    }

    span {
      font-size: 100px;
      font-weight: 600;
      color: #d8d8d8;
      display: inline-block;
    }
  }

  .middle-box {
    width: 200px;
    padding-top: 110px;
    padding-bottom: 110px;
    max-width: 400px;
    z-index: 100;
    margin: 0 auto;
    text-align: center;

    * {
      color: #676a6c;
    }

    .user-avatar {
      padding-top: 20px;
      margin-bottom: 20px;

      img {
        width: 94px;
        height: 94px;
        border: 2px solid #d8d8d8;
        border-radius: 50%;
      }
    }

    h3 {
      margin-top: 5px;
      font-weight: 600;
      font-size: 16px;
    }

    p {
      margin: 0 0 10px;
    }
  }

  input.form-control {
    height: auto;
    padding: 6px 10px;
    margin-bottom: 12px;
  }

  button {
    width: 100%;
    padding: 6px 12px;
    color: #ffffff !important;
    font-weight: bold;

    i {
      color: #ffffff !important;
    }
  }
}

@media (max-width: 768px) {
  .lock-word {
    display: none;
  }
}

@-moz-document url-prefix() {
  .dropdown-panel > ul > li.recent-pages > i.fa {
    margin-top: -16px;
  }
}
